extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content 
     main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.product}
                        div.card__image
                            img(src="https://cdn.pixabay.com/photo/2016/03/27/19/32/blur-1283865_960_720.jpg", alt="A book")
                        div.card__content
                            h2.product__price $19.99
                            p.product__description An interesting book
                        .card__actions
                            button.btn Add to Car
        else 
            h1 No products
