<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    <main>
        <% if(prods.length > 0) { %>
        <div class="grid">
            <% for(let product of prods) { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= product.product %></h1>
                </header>
                <div class="card__image">
                    <img src="https://cdn.pixabay.com/photo/2016/03/27/19/32/blur-1283865_960_720.jpg" alt="A book">
                </div>
                <div class="card__content">
                    <h2 class="product__price"></h2>
                    <p class="product__description">An interesting product</p>
                </div>
                <div class="card__actions">
                    <button class="btn">Add to car</button>
                </div>
            </article>
            <% } %>
        </div>
        <% } else { %>
        <h1>No products found</h1>
        <% } %>
    </main>
    <%- include('includes/end.ejs') %>